        "moxfq_scores": {
          "fields": {
            "id": "Primary key",
            "response_id": "Foreign key to moxfq_responses",
            "total_raw_score": "INTEGER (0-64)",
            "total_normalized_score": "DECIMAL(5,2) (0-100)",
            "walking_standing_score": "DECIMAL(5,2) (0-100)",
            "pain_score": "DECIMAL(5,2) (0-100)",
            "social_interaction_score": "DECIMAL(5,2) (0-100)",
            "interpretation": "VARCHAR(20) (mild|moderate|severe|verySevere)",
            "is_complete": "BOOLEAN",
            "completion_percentage": "INTEGER (0-100)",
            "calculated_at": "TIMESTAMP"
          }
        }
      }
    },
    "apiEndpoints": {
      "POST /api/moxfq": {
        "description": "Save MOXFQ response and calculate scores",
        "payload": "Full moxfq object with q1-q16",
        "response": "Saved response with calculated scores"
      },
      "GET /api/moxfq/{id}": {
        "description": "Retrieve MOXFQ response with scores",
        "response": "Complete response and scoring data"
      },
      "GET /api/patient/{id}/moxfq": {
        "description": "Get all MOXFQ responses for a patient",
        "response": "Array of responses with longitudinal data"
      }
    },
    "scoringAlgorithm": {
      "pseudocode": [
        "1. Validate all questions answered (q1-q16)",
        "2. Calculate raw subscale scores:",
        "   - walkingStanding = sum(q1-q8)",
        "   - pain = sum(q9, q11, q12, q15)",
        "   - socialInteraction = sum(q10, q13, q14, q16)",
        "3. Calculate total raw score = sum(all questions)",
        "4. Normalize scores: (rawScore / maxScore) × 100",
        "5. Determine interpretation based on normalized total score",
        "6. Save to database with timestamp"
      ]
    }
  },
